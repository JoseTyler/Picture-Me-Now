<div class="center">{{Cat.name}}</div>

<div class="category">

    {{#each Cat.photographers}}
    <a class="noUnderline" href="/{{../Cat._id}}/photographers/{{_id}}">{{name}}</a>
    {{/each}}
</div>
<form class="form1" action="/{{Cat._id}}/new" method="POST">
    <input type="text" name="name" placeholder="name" />
    <input type="text" name="city" placeholder="city" />
    <input type="text" name="contact" placeholder="contact" />
    <input type="text" name="about" placeholder="about" />
    <button class="button2" type="submit">Add A Photographer</button>
</form>
<form class="form1" action="/{{Cat._id}}?_method=DELETE" method="POST">
    <button class="button" type="submit">Delete Category</button>
</form>